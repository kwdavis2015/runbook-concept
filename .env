# Runbook Concept Configuration
# Copy to .env and fill in values for live integrations

# =============================================================================
# Global Mode: "mock" (default) or "live"
# When set to "mock", all integrations use mock providers unless overridden
# =============================================================================
RUNBOOK_MODE=mock

# =============================================================================
# Mock Settings
# =============================================================================
MOCK_SCENARIO=high_cpu
# Options: high_cpu, database_connection, deployment_failure, network_latency
MOCK_DELAY_ENABLED=true

# =============================================================================
# ML Engine
# =============================================================================
ML_ENGINE_PROVIDER=anthropic
# Use "mock" for demo without API key, "anthropic" for real ML
ANTHROPIC_API_KEY=
ML_MODEL=claude-sonnet-4-5-20250929

# =============================================================================
# ServiceNow (override with SERVICENOW_MODE=live to use real instance)
# =============================================================================
SERVICENOW_MODE=
SERVICENOW_INSTANCE=
SERVICENOW_USERNAME=
SERVICENOW_PASSWORD=

# =============================================================================
# Datadog
# =============================================================================
DATADOG_MODE=
DATADOG_API_KEY=
DATADOG_APP_KEY=

# =============================================================================
# PagerDuty
# =============================================================================
PAGERDUTY_MODE=
PAGERDUTY_API_KEY=

# =============================================================================
# AWS
# =============================================================================
AWS_MODE=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# =============================================================================
# Jira
# =============================================================================
JIRA_MODE=
JIRA_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=

# =============================================================================
# Slack
# =============================================================================
SLACK_MODE=
SLACK_BOT_TOKEN=
